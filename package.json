{
  "private": true,
  "name": "vercel-spine",
  "version": "1.0.0",
  "description": "Next.js full-stack template with GraphQL, Prisma, and comprehensive testing",
  "packageManager": "pnpm@9.12.1",
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "test": "turbo run test",
    "test:all": "pnpm test:unit && pnpm test:e2e",
    "test:all:full": "pnpm test:unit && pnpm test:e2e && pnpm test:perf",
    "test:unit": "jest --coverage --ci",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage --coverageReporters=html lcov text",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:perf": "lhci autorun",
    "plop": "plop",
    "generate": "plop",
    "generate:component": "plop component",
    "generate:resolver": "plop resolver",
    "generate:api": "plop api-route",
    "generate:e2e": "plop e2e-test"
  },
  "dependencies": {
    "@apollo/client": "^4.0.7",
    "@apollo/experimental-nextjs-app-support": "^0.14.0",
    "@apollo/server": "^5.0.0",
    "@as-integrations/next": "^4.0.0",
    "@prisma/client": "^6.18.0",
    "graphql": "^16.11.0",
    "next": "^14.2.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.56.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "autoprefixer": "^10.4.21",
    "critters": "^0.0.25",
    "dotenv": "^17.2.3",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "plop": "^4.0.4",
    "postcss": "^8.5.6",
    "prettier": "^3.3.0",
    "prisma": "^6.18.0",
    "tailwindcss": "3",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "turbo": "^2.0.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
